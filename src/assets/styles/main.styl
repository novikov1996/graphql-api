.container
  width 100%
  padding 0 50px
  display flex
  flex-direction column

.page
  width 100%
  display flex
  flex-direction column
  margin 50px 0

.row
  margin-bottom 30px

.tab-content
  margin 30px 10px

.align-flex
  display flex
  align-items center
  justify-content center

.mobile
  display none

section
  margin-bottom 50px

@media screen and (max-width: $laptop)
  .container
    width 100%
    padding 15px 20px

  section
    margin-bottom 0

@media screen and (max-width: $tablet)
  .mobile
    display flex
